{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/icon.png",
        "iconSmall": "images/iconSmall.png",
        "category": "message"
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "Template",
          "description": "A Template for a custom Journey Builder activity",
          "step1Label": "Configure Activity"
        }
    },
    "arguments": {
        "execute": {
          "inArguments": [{
            "myNameArgument": "{{Contact.Attribute.SFDCDE.Name}}",
            "myEmailArgument": "{{Contact.Attribute.SFDCDE.Email}}",
            "myIdArgument": "{{Contact.Attribute.SFDCDE.Id}}",
            "myconstantArgument": "Constant"
          }],
          "outArguments": [],
          "url":"https://thesfmcactivity.herokuapp.com/journeybuilder/execute",
           "verb": "POST",
            "body": "",
            "header": "",
            "format": "json",
            "useJwt": true,
            "timeout": 10000
        }
    },
    "configurationArguments": {
      "save": {
        "url": "https://thesfmcactivity.herokuapp.com/journeybuilder/save",
          "verb": "POST",
        "useJwt": true
       },
       "publish": {
        "url": "https://thesfmcactivity.herokuapp.com/journeybuilder/publish",
           "verb": "POST",
        "useJwt": true
       },
      "stop": {
        "url": "https://thesfmcactivity.herokuapp.com/journeybuilder/stop",
           "verb": "POST",
        "useJwt": true
      },
      "validate": {
        "url": "https://thesfmcactivity.herokuapp.com/journeybuilder/validate",
        "verb": "POST",
        "useJwt": true
      }
    },
    "wizardSteps": [
        { "label": "Configure Activity", "key": "step1" }
    ],
    "userInterfaces": {
        "configModal": {
            "height": 400,
            "width": 1000,
          "fullscreen": false
        }
    },
    "schema": {
        "arguments": {
            "execute": {
              "inArguments": [{
                "myNameArgument": {
                  "dataType": "Text",
                  "isNullable": false,
                  "direction": "in"
                },
                "myEmailArgument": {
                  "dataType": "Text",
                  "isNullable": false,
                  "direction": "in"
                },
                "myIdArgument": {
                  "dataType": "Number",
                  "isNullable": false,
                  "direction": "in"
                },
                "myconstantArgument": {
                  "dataType": "Text",
                  "isNullable": false,
                  "direction": "in"
                }
              }],
              "outArguments": []
            }
        }
    }
}